@model movie.Areas.Admin.Models.Movie

<h2>Edit Movie</h2>

<form asp-action="/Edit"method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" id="Id" name="Id" />

    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" id="Name" name="Name" class="form-control" value="@Model.Name" />
    </div>

    <div class="form-group">
        <label for="Des">Description</label>
        <textarea asp-for="Des" id="Des" name="Des" class="form-control">@Model.Des</textarea>
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Price" id="Price" name="Price" type="number" value="@Model.Price
" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <input asp-for="Status" id="Status" name="Status" type="checkbox" value="@Model.Status"/>
    </div>

    <div class="form-group">
        <label for="CategoryId">Category</label>
        <select asp-for="CategoryId" id="CategoryId" name="CategoryId" class="form-control">
            <option value="">-- Select Category --</option>
            @foreach (var cat in ViewBag.Categories)
            {
                <option value="@cat.Id" selected="@(cat.Id == Model.CategoryId ? "selected" : null)">@cat.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CinemaId">Cinema</label>
        <select asp-for="CinemaId" id="CinemaId" name="CinemaId" class="form-control">
            <option value="">-- Select Cinema --</option>
            @foreach (var cin in ViewBag.Cinemas)
            {
                <option value="@cin.Id" selected="@(cin.Id == Model.CinemaId ? "selected" : null)">@cin.Name</option>
            }
        </select>
        <span asp-validation-for="CinemaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="MainImgFile">Current Main Image</label><br />
        <img src="@Model.MainImg" width="100" />
        <input type="file" id="MainImgFile" name="MainImgFile" class="form-control" />
    </div>

    <div class="form-group">
        <label for="SubImgFiles">New Sub Images</label>
        <input type="file" id="SubImgFiles" name="SubImgFiles" multiple class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

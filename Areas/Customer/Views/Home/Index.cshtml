@model IEnumerable<Movie>

<div class="container my-5">
    <h2 class="mb-4">🎬 Movies Filter</h2>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-3">
            <input type="text" name="name" class="form-control" placeholder="Search by name..." value="@ViewBag.name" />
        </div>
        <div class="col-md-2">
            <input type="number" name="minPrice" class="form-control" placeholder="Min Price" value="@ViewBag.minPrice" />
        </div>
        <div class="col-md-2">
            <input type="number" name="maxPrice" class="form-control" placeholder="Max Price" value="@ViewBag.maxPrice" />
        </div>
        <div class="col-md-2">
            <select name="categoryId" class="form-select">
                <option value="">All Categories</option>
                @foreach (var c in ViewBag.Categories)
                {
                    <option value="@c.Id" @(ViewBag.categoryId == c.Id ? "selected" : "")>@c.Name</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <select name="cinemaId" class="form-select">
                <option value="">All Cinemas</option>
                @foreach (var c in ViewBag.Cinemas)
                {
                    <option value="@c.Id" @(ViewBag.cinemaId == c.Id ? "selected" : "")>@c.Name</option>
                }
            </select>
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    <section class="products py-5 my-5" data-anim="fade-up" data-anim-duration="1s">
        <div class="container">
            <div class="head-section mb-3 d-flex justify-content-between align-items-center">
                <h3>Movies</h3>
            </div>

            <div class="row row-gap-4">
                @if (!Model.Any())
                {
                    <div class="text-center text-muted">
                        <h4>No movies found 😢</h4>
                    </div>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <div class="col-6 col-md-4 col-lg-2 h-100">
                            <div class="card shadow-sm">
                                <img src="~/uploads/@item.MainImg" alt="@item.Name" class="card-img-top">
                                <div class="card-body text-center">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text text-muted">@item.Des</p>
                                    <span class="fw-bold text-success">@item.Price.ToString("C")</span>
                                    <div class="mt-2">
                                        <span class="badge bg-primary">@item.category.Name</span>
                                        <span class="badge bg-danger">@item.cinema.Name</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            <!-- ✅ Pagination -->
            @if (ViewBag.TotalPages > 1)
            {
                <nav aria-label="Movies Pagination" class="mt-4">
                    <ul class="pagination justify-content-center">

                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)">Previous</a>
                        </li>

                        @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i">@i</a>
                            </li>
                        }

                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)">Next</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </section>
</div>
